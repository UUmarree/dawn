    "label": "Images"
    },
    {
    "type":"image_picker",
    "id": "Image2",
     "label": "Images"
    },
    {
    "type": "url",
    "id": "button_url",
    "label": "Button URL",
    },
    {
     "type":"url",
     "id": "button_url1",
     "label":"Button URL",
    }
  ],
 
  "presets": [
    {
      "name": "Banner-Images"
    }
  ]
}
{% endschema %}
