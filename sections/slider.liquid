<style>
   html, body {
  position: relative;
  height: 100%;
}

body {
  background: #eee;
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
  font-size: 14px;
  color: aqua;
  margin: 0;
  padding: 0;
}

.swiper {
  width: 100%;
  height: 100%;
  background-color: aqua;
}

.swiper-slide {
  text-align: center;
  font-size: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper-wrapper {
  width: 100%;
}

.swiper-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

  </style>

<div class="swiper mySwiper">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide">
        {% if block.settings.image != blank %}
          <picture>
            <source media="(max-width: 600px)" srcset="{{ block.settings.image | image_url: 'master' }}">
            <img src="{{ block.settings.image | image_url: 'master' }}" alt="Featured Image">
          </picture>
        {% else %}
          <p>No image available</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
</div>

<script>
  var swiper = new Swiper(".mySwiper", {
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });
</script>




{% schema %}
  {
    "name": "Slider Custom",
    "tag": "section",
    "class": "featured-collections-custom index-section",
    "settings": [],
    "blocks": [
      {
        "type": "image",
        "name": "Add Featured Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Select Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slider Custom",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}
  